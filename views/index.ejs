<!doctype html>
<html lang="en">
  <% if(session.Id) { %>                  
    <head>
      <title>Control de Inventario</title>
      <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
    </head>
    
    <body>
      <div class="container">
        <h1>Control de Inventario</h1>
    
        <div class="menu">
          <button id="btn-inventario">Inventario</button>
          <button id="btn-compra">Compra</button>
          <button id="btn-venta">Venta</button>
          <button id="btn-historial-compras">Historial de Compras</button>
          <button id="btn-historial-ventas">Historial de Ventas</button>
          <button id="btn-cerrar-sesion" onclick="cerrarSesion()">Cerrar Sesión</button>
        </div>
    
        <section id="section-inventario" class="section">
          <h2>Inventario</h2>
          <div>
            <label for="search-material-inventario">Buscar por material:</label>
            <input type="text" id="search-material-inventario" />
            <button id="btn-search-inventario">Buscar</button>
          </div>
          <table id="tabla-inventario">
            <thead>
              <tr>
                <th>Clave</th>
                <th>Material</th>
                <th>Descripcion</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Precio total</th>
              </tr>
            </thead>
            <tbody id="cuerpo-inventario">
              <!-- Aquí se agregan las filas dinámicamente -->
            </tbody>
          </table>
        </section>
    
        <section id="section-compra" class="section">
          <h2>Compra</h2>
          <form method="post" action="/compra">
            <label for="clave">Clave:</label>
            <input type="text" name="clave" required>
            <label for="material">Material:</label>
            <input type="text" name="material" required>
            <label for="descripcion">Descripción:</label>
            <input type="text" name="descripcion" required>
            <label for="cantidad">Cantidad:</label>
            <input type="number" name="cantidad" required>
            <label for="precio">Precio Unitario:</label>
            <input type="number" name="precio" required>
            <label for="proveedor">Proveedor:</label>
            <input type="text" name="proveedor" required>
            <label for="fecha">Fecha:</label>
            <input type="date" name="fecha" required>
            <button type="submit" value="compra">Comprar</button>
          </form>
        </section>
    
        <section id="section-venta" class="section">
          <h2>Venta</h2>
          <form method="post" action="/venta">
            <label for="claveventa">Clave:</label>
            <input type="text" name="claveventa" required>
            <label for="materialventa">Material:</label>
            <input type="text" name="materialventa" required>
            <label for="cantidadventa">Cantidad:</label>
            <input type="number" name="cantidadventa" required>
            <label for="precioventa">Precio Unitario:</label>
            <input type="number" name="precioventa" required>
            <label for="empresaventa">Cliente a quien se vende:</label>
            <input type="text" name="empresaventa" required>
            <label for="fechaventa">Fecha:</label>
            <input type="date" name="fechaventa" required>
            <button type="submit" value="venta">Vender</button>
          </form>
          
        </section>
    
        <section id="section-historial-compras" class="section">
          <h2>Historial de Compras</h2>
          <div>
            <label for="search-material">Buscar por material:</label>
            <input type="text" id="search-material" />
            <button id="btn-search-compras">Buscar</button>
          </div>
          <div id="historial-compras-container"></div>
          <button id="btn-descargar-compras">Descargar</button>
        </section>
    
        <section id="section-historial-ventas" class="section">
          <h2>Historial de Ventas</h2>
          <div>
            <label for="search-material-ventas">Buscar por material:</label>
            <input type="text" id="search-material-ventas" />
            <button id="btn-search-ventas">Buscar</button>
          </div>
          <div id="historial-ventas-container"></div>
          <button id="btn-descargar-ventas">Descargar</button>
        </section>
        
      </div>
    
      <script src="/javascripts/Funcion.js"></script>
    </body>
    
  <% } else { %>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title>Login System in Node.js Express</title>
    </head>
    <body>

        <div class="container">
            <h1 class="mt-5 mb-5 text-center text-primary"><b>Iniciar sesion</b></h1>

            <div class="row mt-5">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">Login</div>
                        <div class="card-body">
                            <form method="post" action="/login">
                                <div class="mb-3">
                                    <label> Usuario</label>
                                    <input type="text" name="Usuario" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label>Contraseña</label>
                                    <input type="password" name="Contraseña" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <input type="submit" class="btn btn-primary" value="Login" />
                                </div>

                            </form>
                        </div>
                    </div>

                <% } %>
                </div>
            </div>
        </div>
    </body>
</html>
