<!doctype html>
<html lang="en">
  <% if(session.Id) { %>                  
    <head>
      <title>Control de Inventario</title>
      <link rel="stylesheet" type="text/css" href="/stylesheets/style.css" crossorigin="anonymous">
    </head>
    
    <body>
      <div class="container">
        <h1>Control de Inventario</h1>
    
        <div class="menu">
          <button id="btn-inventario">Inventario</button>
          <button id="btn-compra">Compra</button>
          <button id="btn-venta">Venta</button>
          <button id="btn-historial-compras">Historial de Compras</button>
          <button id="btn-historial-ventas">Historial de Ventas</button>
        </div>
    
        <section id="section-inventario" class="section">
          <h2>Inventario</h2>
          <table id="tabla-inventario">
            <thead>
              <tr>
                <th>Clave</th>
                <th>Material</th>
                <th>Descripcion</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Precio Total</th>
              </tr>
            </thead>
            <tbody id="cuerpo-inventario">
              <!-- Aquí se agregan las filas dinámicamente -->
            </tbody>
          </table>
        </section>
    
        <section id="section-compra" class="section">
          <h2>Compra</h2>
          <form method="post" action="/compra">
            <label for="clave-compra">Clave:</label>
            <input type="text" id="clave-compra" required>
            <label for="material-compra">Material:</label>
            <input type="text" id="material-compra" required>
            <label for="descripcion-compra">Descripción:</label>
            <input type="text" id="descripcion-compra" required>
            <label for="cantidad-compra">Cantidad:</label>
            <input type="number" id="cantidad-compra" required>
            <label for="precio-compra">Precio Unitario:</label>
            <input type="number" id="precio-compra" required>
            <label for="proveedor-compra">Proveedor:</label>
            <input type="text" id="proveedor-compra" required>
            <label for="fecha-compra">Fecha:</label>
            <input type="date" id="fecha-compra" required>
            <button type="submit">Comprar</button>
          </form>
        </section>
    
        <section id="section-venta" class="section">
          <h2>Venta</h2>
          <form method="post" action="/venta">
            <label for="clave-venta">Clave:</label>
            <input type="text" id="clave-venta" required>
            <label for="material-venta">Material:</label>
            <input type="text" id="material-venta" required>
            <label for="cantidad-venta">Cantidad:</label>
            <input type="number" id="cantidad-venta" required>
            <label for="precio-venta">Precio Unitario:</label>
            <input type="number" id="precio-venta" required>
            <label for="empresa-venta">Cliente a quien se vende:</label>
            <input type="text" id="empresa-venta" required>
            <label for="fecha-venta">Fecha:</label>
            <input type="date" id="fecha-venta" required>
            <button type="submit">Vender</button>
          </form>
        </section>
    
        <section id="section-historial-compras" class="section">
          <h2>Historial de Compras</h2>
          <div id="historial-compras-container"></div>
          <button id="btn-descargar-compras">Descargar</button>
        </section>
    
        <section id="section-historial-ventas" class="section">
          <h2>Historial de Ventas</h2>
          <div id="historial-ventas-container"></div>
          <button id="btn-descargar-ventas">Descargar</button>
        </section>
      </div>
    
      <script src="/javascripts/Funcion.js"></script>
    </body>
    
  <% } else { %>
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        <title>Login System in Node.js Express</title>
    </head>
    <body>

        <div class="container">
            <h1 class="mt-5 mb-5 text-center text-primary"><b>Login System in Node.js Express</b></h1>

            <div class="row mt-5">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">Login</div>
                        <div class="card-body">
                            <form method="post" action="/login">
                                <div class="mb-3">
                                    <label>Email Address</label>
                                    <input type="text" name="Usuario" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <label>Password</label>
                                    <input type="password" name="Contraseña" class="form-control" />
                                </div>
                                <div class="mb-3">
                                    <input type="submit" class="btn btn-primary" value="Login" />
                                </div>
                            </form>
                        </div>
                    </div>

                <% } %>
                </div>
            </div>
        </div>
    </body>
</html>
